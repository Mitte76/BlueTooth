<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/regularLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="1dp"
    android:layout_marginStart="1dp"
    android:layout_marginTop="1dp"
    android:background="@color/row_bg"
    android:gravity="center_vertical"
    android:orientation="vertical"

    >


    <TextView
        android:id="@+id/noti_list_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:padding="0dp"
        android:text="ff"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/noti_list_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_alignParentStart="true"
        android:layout_below="@id/noti_list_address"
        android:layout_gravity="center_vertical"
        android:padding="0dp"
        android:text="fdsffsdfsdfs"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/noti_list_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_alignParentStart="true"
        android:layout_below="@id/noti_list_subject"
        android:layout_gravity="center_vertical"
        android:padding="0dp"
        android:text="fdsffsdfsdfs"
        android:textSize="16sp" />


</RelativeLayout>